<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://code.alibabatech.com/schema/dubbo
                           http://code.alibabatech.com/schema/dubbo/dubbo.xsd">


    <dubbo:application name="dubbo-provider"/>

    <!--不使用注册中心-->
    <bean id="helloService1" class="com.learning.service.impl.HelloServiceImpl"/>

    <dubbo:service interface="com.learning.service.HelloService" ref="helloService1" registry="N/A"/>

    <!--使用muticast注册中心：比较简单不需要安装其他东西，适合练习调试-->
    <dubbo:registry address="multicast://224.2.3.4:1234"/>

    <bean id="helloService2" class="com.learning.service.impl.HelloServiceImpl"/>

    <dubbo:service interface="com.learning.service.HelloService" ref="helloService2"/>

    <!--使用zookeeper注册中心-->
    <dubbo:registry address="zookeeper://192.168.116.132:2182"/>

    <bean id="helloService3" class="com.learning.service.impl.HelloServiceImpl"/>

    <dubbo:service interface="com.learning.service.HelloService" ref="helloService3"/>

    <!--使用redis注册中心-->
    <dubbo:registry address="redis://192.168.116.132:6379"/>

    <bean id="helloService4" class="com.learning.service.impl.HelloServiceImpl"/>

    <dubbo:service interface="com.learning.service.HelloService" ref="helloService4"/>



</beans>